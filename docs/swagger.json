                ],
                "tags": [
                    "Worker"
                ],
                "summary": "Get list of staff",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/models.UserDto"
